<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("../template/header.ejs") %>
    <link rel="stylesheet" href="/public/css/vendor.settings.css" />
</head>
<body>
  <input type="hidden" id="_id" value="<%= user._id %>" />
    <div class="container">
        <nav class="sidebar close">
          <header>
            <div class="image-text">
              <span class="image">
                <img src="/public/favicon.ico" alt="" />
              </span>
  
              <div class="text header-text">
                <span class="name">CartWheels</span>
                <!-- <span class="xxx"><i class="fa-solid fa-x" id="xxx"></i></span> -->
                <!-- <span class="profession">business Name</span> -->
              </div>
            </div>
  
            <i class="bx bx-chevron-right toggle" id="sherep"></i>
          </header>
  
          <div class="menu-bar">
            <div class="menu">
              <!-- <li class="search-box">
                              <i class='bx bx-search-alt-2 icon' ></i>
                              <input type="search" placeholder="Search...">
                          </li>  -->
              <hr class="divider" />
              <ul class="menu-links">
                <li class="nav-links">
                  <a href="/vendor/dashboard" class="active">
                    <i class="fa-solid fa-house icon"></i>
                    <span class="text nav-text">Dashboard</span>
                  </a>
                </li>
                <li class="nav-links">
                  <a href="" class="prof">
                    <i class="fa-solid fa-user-gear icon"></i>
                    <span class="text nav-text">Profile</span>
                  </a>
                </li>
              </ul>
            </div>
  
            <div class="bottom-content">
              <li class="nav-links">
                <a id="logout">
                  <i class="fa-solid fa-power-off icon"></i>
                  <span class="text nav-text">Logout</span>
                </a>
              </li>
              <li class="mode">
                <div class="moon-sun">
                  <i class="fa-solid fa-moon icon moon"></i>
                  <i class="fa-solid fa-sun icon sun"></i>
                </div>
                <span class="mode-text text">Dark Mode</span>
                <div class="toggle-switch">
                  <span class="switch"></span>
                </div>
              </li>
            </div>
          </div>
        </nav>
        <nav class="sidebar close mobile-view">
          <header>
            <div class="image-text">
              <span class="image">
                <img src="/public/favicon.ico" alt="" />
              </span>
  
              <div class="text header-text">
                <span class="name">CartWheels</span>
                <span class="xxx"><i class="fa-solid fa-x" id="xxx"></i></span>
              </div>
            </div>
  
            <i class="bx bx-chevron-right toggle" id="sherep"></i>
          </header>
  
          <div class="menu-bar">
            <div class="menu">
              <hr class="divider" />
              <ul class="menu-links">
                <li class="nav-links">
                  <a href="/vendor/dashboard" class="active">
                    <i class="fa-solid fa-house icon"></i>
                    <span class="text nav-text">Dashboard</span>
                  </a>
                </li>
                <li class="nav-links">
                  <a href="" class="secondact">
                    <i class="fa-solid fa-user-gear icon"></i>
                    <span class="text nav-text">Profile</span>
                  </a>
                </li>
              </ul>
            </div>
  
            <div class="bottom-content">
              <li class="nav-links">
                <a href="">
                  <i class="fa-solid fa-power-off icon"></i>
                  <span class="text nav-text">Logout</span>
                </a>
              </li>
              <!-- <li class="mode">
                <div class="moon-sun">
                  <i class="fa-solid fa-moon icon moon"></i>
                  <i class="fa-solid fa-sun icon sun"></i>
                </div>
                <span class="mode-text text">Dark Mode</span>
                <div class="toggle-switch">
                  <span class="switch"></span>
                </div>
              </li> -->
            </div>
          </div>
        </nav>
  
        <!-- ========================home========================= -->
  
        <div class="mother-container">
          <section class="home">
            <div class="container1">
              <div class="bars-container">
                <i class="fa-solid fa-bars" id="bars"></i>
              </div>
              <div class="vendors-name"><%= user.businessName %></div>
              <div class="business-logo">
                <img src="<%= user.businessImage %>" alt="" />
              </div>
            </div>
  
            <!--====================== map-section===================== -->
  
            <div class="container2">
              <div class="map-section">
                <div class="map-position" id="map"></div>
                <div class="location-section">
                  <div class="location-position">
                    <h2>
                      <i class="fa-solid fa-location-dot"></i>
                      <p id="locationName" >Loading...</p>
                    </h2>
                  </div>
                  <div class="button-section">
                    <button class="button-getLocation" id="update-location" disabled>
                      <span class="button-content" >Update Location</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
  
            <!-- =========================business-container ==================-->
            <div class="settings-container">
              <div class="buss-container">
                <div class="bus1-container">
                  <div class="instruct-cons">
                    <p>
                      This segment is designed to modify and enhance your business
                      profile. Updating it will ensure that your refreshed
                      business profile becomes visible to customers.
                    </p>
                  </div>
                  <div class="logo-pic">
                    <img id="imageHolder" src="<%= user.businessImage %>" alt="" />
                    <input type="file"  style="display: none;" id="fileInput" />
                  </div>
                  <div class="busin-info-container">
                    <input type="text" value="<%= user.businessName %>" id="businessName" placeholder="Enter your Business Name" />
                    <textarea
                      name=""
                      id="description"
                      cols="30"
                      rows="10"
                      placeholder="Enter Business Description"
                    ><%= user.description %></textarea>
                  </div>
                  <div class="butt-container">
                    <button class="button-getLocation" id="update-business">
                      <span class="button-content">Update</span>
                    </button>
                  </div>
                </div>
                <div class="output-container">
                  <div class="des-info">
                    <p>
                      This represents how your business profile appears from the
                      perspective of customers.
                    </p>
                  </div>
                  <div class="super-card">
                    <div class="wrapper">
                      <div class="food-image">
                        <img src="<%= user.businessImage %>" id="p-img" alt="" />
                      </div>
                      <div class="descripts">
                        <h4 id="title"><%= user.businessName %></h4>
                        <p class="line-clamp" id="p-desc">
                          <%= user.description %>
                        </p>
                        <div class="buttons-container">
                          <button class="btns">View</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
  
              <div class="prof-container">
                <!-- <div class="infos-area">
                  <p>Navigate to your account settings where you can seamlessly
                    modify and enhance your email, username, and password, ensuring
                    a personalized and secure online profile.</p>
                </div> -->
                <section class="main-content">
                  <form
                    class="form vendor-info"
                    id="registration-form"
                  >
                    <div class="paragraph">
                      <h3>Update your account</h3>
                      <p style="font-size: 12px">
                        Update your account swiftly for the latest and
                        personalized information.
                      </p>
                    </div>
                    <div class="button--container1"></div>
  
                    <div class="line">
                      <div></div>
                      <div><p></p></div>
                      <div></div>
                    </div>
  
                    <div class="form-group">
                      <input
                        type="text"
                        id="fullname"
                        name="fullname"
                        value="<%= user.fullname %>"
                        placeholder="Full Name"
                      />
                    </div>
                    <div class="form-group">
                      <input
                        type="email"
                        id="email"
                        name="email"
                        value="<%= user.email %>"
                        placeholder="Email"
                      />
                      <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="New Password"
                      />
                    </div>
                    <div class="form-group">
                      <!-- <input type="text" id="address" name="address" placeholder="Address"> -->
                    </div>
  
                    <div class="buttons">
                      <button type="submit" id="submit" class="btn update-vendor">
                        Update<i class="fa-solid fa-greater-than"></i>
                      </button>
                    </div>
  
                    <div class="inst">
                      <p>Ensure that the information you input is accurate.</p>
                    </div>
                  </form>
                </section>
              </div>
            </div>
          </section>
        </div>
      </div>
      <script type="text/javascript" src="/public/gmaps.api.js"></script>
      <script type="text/javascript" src="/public/js/vendor.settings.js"></script>
</body>
</html>