<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/customer.css" />
    <%- include("template/header.ejs") %>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <div class="container1">
          <div class="kainin">
            <h1>Track a variety of your favorite street food choices.</h1>
          </div>
          <div class="user--info">
            <div class="search--box">
              <i class="fa-solid fa-magnifying-glass"></i>
              <input type="text" placeholder="Search" id="myInput" />
            </div>
          </div>
        </div>
        <div class="container2">
          <div class="food-container">
            <div class="card">
              <% if(vendors.length > 0) { vendors.forEach((v) => { %>
              <div class="wrapper">
                <div class="food-image">
                  <img src="<%= v.businessImage %>" alt="" />
                </div>
                <div class="descript">
                  <h4 class="title"><%= v.businessName %></h4>
                  <p class="p-descript">
                    <%= v.description %>
                  </p>
                  <div class="button-container">
                    <button id="<%= v._id %>" class="btn view">View</button>
                  </div>
                </div>
              </div>

              <% }) } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/public/js/customer.js"></script>
  </body>
</html>
